<Window x:Class="DataVisualization.Core.Views.SeriesPropertiesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataVisualization.Core.Views"
        xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Series Properties" MinHeight="400" Height="400" MinWidth="350" Width="350" 
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center">
            <TextBox Text="{Binding SeriesName}" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Series name"></TextBox>
            <Label Content="Color"></Label>
            <xctk:ColorPicker Height="25" SelectedColor="{Binding SeriesColor}" 
                              DisplayColorAndName="False" UsingAlphaChannel="False"
                              HorizontalAlignment="Stretch"/>
            <Label Content="Thickness"></Label>
            <Slider Minimum="0" Maximum="5" Value="{Binding Thickness}" Style="{StaticResource MaterialDesignDiscreteSlider}" ToolTip="Thickness"/>

            <Separator Margin="0,20"></Separator>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="Save" Margin="5" cal:Message.Attach="[Event Click] = [Action OnSave]"></Button>
                <Button Content="Cancel" Margin="5"  cal:Message.Attach="[Event Click] = [Action OnCancel]"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
