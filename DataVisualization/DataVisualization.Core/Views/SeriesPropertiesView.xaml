<Window x:Class="DataVisualization.Core.Views.SeriesPropertiesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataVisualization.Core.Views"
        xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        xmlns:cal="http://www.caliburnproject.org"
        mc:Ignorable="d"
        Title="SeriesPropertiesView" Height="450" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="Name"></Label>
            <TextBox Text="{Binding SeriesName}"></TextBox>
            <Label Content="Color"></Label>
            <xctk:ColorPicker Width="50" Height="25" SelectedColor="{Binding SeriesColor}" 
                              DisplayColorAndName="False" UsingAlphaChannel="False"
                              HorizontalAlignment="Left"/>
            <Label Content="Thickness"></Label>
            <xctk:IntegerUpDown Value="{Binding Thickness}" Minimum="1" Maximum="5"></xctk:IntegerUpDown>

            <Separator Margin="0,20"></Separator>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="Save" Width="50" Height="30" Margin="5" cal:Message.Attach="[Event Click] = [Action OnSave]"></Button>
                <Button Content="Cancel" Width="50" Height="30" Margin="5"  cal:Message.Attach="[Event Click] = [Action OnCancel]"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
